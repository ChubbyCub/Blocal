<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/offer_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_margin="10dp"
            android:columnCount="3"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/offer_buyer_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/offer_amount_list"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                />

                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_column="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/offer_accept_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_accept_symbol"
                        android:padding="10dp"
                        app:cb_color="#228B22"
                        app:cb_pressedRingWidth="0dip" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/offer_deny_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="99dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_deny_symbol"
                        app:cb_color="#b50404"
                        app:cb_pressedRingWidth="0dip" />
                </RelativeLayout>

        </GridLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>